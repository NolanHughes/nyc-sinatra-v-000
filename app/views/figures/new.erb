<h1>Create a Figure</h1>

<form method="post" action="/figures">
  <label for="figure_name">Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]" />

  <br />

  <label for="new_title">New Title:</label>
  <input type="text" id="new_title" name="figure[new_title]" />

  <br />

  <label for="title[name]">Titles:</label>
  <%@titles.each do |title|%>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%=title.name%></input>
  <% end %>

  <br />

  <label for="new_landmark">New Landmark:</label>
  <input type="text" id="new_landmark" name="figure[new_landmark]" />

  <br />

  <label for="landmark[name]">Existing Landmarks:</label>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%=landmark.name%></input>
  <% end %>

  <br />

  <button type="submit">Create New Figure</button>
</form>
